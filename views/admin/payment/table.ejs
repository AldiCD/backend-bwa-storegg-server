<table id="example2" class="table table-bordered table-hover">
    <thead>
      <tr>
        <th>No</th>
        <th>Tipe Pembayaran</th>
        <th>Bank</th>
        <th>Status</th>
        <th>Action</th>
      </tr>
    </thead>
    <tbody>
      <%for(let i = 0;i < payment.length;i++){%>
      <tr>
        <td><%= i +1%></td>
        <td><%= payment[i].type%></td>
        <td>
            <% payment[i].banks.forEach(bank => {%>
                <span class="badge badge-warning">           
                  <%=bank.nameBank%> <%=bank.name%> 
                </span>
            <%})%>

        </td>
        <td>
            <%if(payment[i].status === "Y"){%> 
              <span class="badge badge-success">Hidup</span>
              <%} else {%>
              <span class="badge badge-danger">Mati</span>
               <%}%>
        </td>
  
        <td>
          <form action="/payment/status/<%=payment[i]._id%>?_method=PUT" method="post">
            <button class="btn btn-primary btn-sm" style="display:inline-block">
              <i class="fas fa-folder sm"></i>
              <%if(payment[i].status === "Y"){%> 
                Mati 
              <%} else {%> 
                Hidup 
              <%}%>
            </button>
  
            <a href="/payment/edit/<%=payment[i]._id%>" style="display:inline-block" class="btn btn-info btn-sm" >
              <i class="fas fa-pencil-alt"></i>Edit
            </a>
          </form>
          <form action="/payment/delete/<%=payment[i]._id%>?_method=DELETE"
            method="post" style="display:inline-block">
            <button class="btn btn-danger btn-sm" ">
              <i class="fas fa-trash"></i>Hapus
            </button>
          </form>
        </td>
      </tr>
      <%}%>
    </tbody>
  </table>
  