<%-include('../../partials/header.ejs')%>
<%-include('../../partials/navbar.ejs')%>
<%-include('../../partials/sidebar.ejs')%>

<div class="content-wrapper">
  <!-- Content Header (Page header) -->
  <section class="content-header">
    <div class="container-fluid">
      <div class="row mb-2">
        <div class="col-sm-6">
          <h1>Kategory</h1>
        </div>
        <div class="col-sm-6">
          <ol class="breadcrumb float-sm-right">
            <li class="breadcrumb-item"><a href="/">Home</a></li>
            <li class="breadcrumb-item"><a href="/category">Kategory</a></li>
            <li class="breadcrumb-item active">Create</li>
          </ol>
        </div>
      </div>
    </div>
    <!-- /.container-fluid -->
  </section>

  <!-- Main content -->
  <section class="content">
    <div class="container-fluid">
      <div class="row">
        <div class="col-12">
          <div class="card">
            <!-- /.card-header -->
            <div class="card-body">
              <div class="card card-primary">
                <div class="card-header">
                  <h3 class="card-title">Edit Nominal <%=nominal.coinName%> </h3>
                </div>
                <!-- /.card-header -->
                <!-- form start -->
                <form action="/nominal/edit/<%=nominal.id%>?_method=PUT" method="post">
                  <div class="card-body">
                    <div class="form-group">
                      <label>NamaCoin</label>
                      <select class="form-control select2" style="width: 100%;" name="coinName">
                        <option selected="selected">Pilih Coin</option>
                        <option value="Gold" 
                        <%if(nominal.coinName === "Gold"){%>
                            selected
                            <%}%>
                            >Gold</option>
                        <option value="Diamond"  
                        <%if(nominal.coinName === "Diamond"){%>
                            selected
                            <%}%>
                            >Diamond</option>
                        <option value="Silver" 
                        <%if(nominal.coinName === "Silver"){%>
                            selected
                            <%}%> 
                            >Silver</option>

                      </select>
                    </div>
                    <div class="form-group">
                      <label for="coinQuantity">Jumlah Coin</label>
                      <input
                        type="number"
                        name="coinQuantity"
                        class="form-control"
                        id="coinQuantity"
                        value="<%=nominal.coinQuantity%>"
                        placeholder="Masukkan Jumlah Coin"
                        required
                      />
                    </div>
                    <div class="form-group">
                      <label for="priece">Masukkan harga</label>
                      <input
                        type="number"
                        name="price"
                        class="form-control"
                        id="price"
                        value="<%=nominal.price%>"
                        placeholder="Masukkan Jumlah Coin"
                        required
                      />
                    </div>
                  </div>
                  <!-- /.card-body -->

                  <div class="card-footer">
                    <button type="submit" class="btn btn-primary">
                      Submit
                    </button>
                  </div>
                </form>
              </div>
            </div>
            <!-- /.card-body -->
          </div>
          <!-- /.card -->
            <!-- /.card-header -->

            <!-- /.card-body -->
          </div>
          <!-- /.card -->
        </div>
        <!-- /.col -->
      </div>
      <!-- /.row -->
    </div>
    <!-- /.container-fluid -->
  </section>
  <!-- /.content -->
</div>

<%-include('../../partials/footer.ejs')%> <%-include('../../partials/js.ejs')%>
